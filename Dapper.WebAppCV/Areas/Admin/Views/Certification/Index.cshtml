@using DTO.DTOs.CertificationDtos
@model List<CertificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sertifkatlar</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Sertifkatlar</th>
            <th scope="col">Yenilə</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td><a class="btn btn-warning">Yenilə</a></td>
                <td><a class="btn btn-danger">Sil</a></td>
            </tr>
        }

    </tbody>
</table>
